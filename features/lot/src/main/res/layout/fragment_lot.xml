<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/common_padding"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_lot_your_team"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lot_height"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="@dimen/lot_corner_radius"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_dark"
            android:gravity="center"
            android:text="@string/your_team"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/lot_title"
            android:textStyle="bold"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_lot_enemy_team"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lot_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/common_padding"
        app:cardCornerRadius="@dimen/lot_corner_radius"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_red_dark"
            android:gravity="center"
            android:text="@string/enemy_team"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/lot_title"
            android:textStyle="bold"
            />

    </androidx.cardview.widget.CardView>

</LinearLayout>

